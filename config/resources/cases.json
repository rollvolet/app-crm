{
  "version": "0.1",
  "prefixes": {
    "crm": "http://data.rollvolet.be/vocabularies/crm/",
    "dct": "http://purl.org/dc/terms/",
    "dossier": "https://data.vlaanderen.be/ns/dossier#",
    "ext": "http://mu.semte.ch/vocabularies/ext/",
    "frapo": "http://purl.org/cerif/frapo/",
    "price": "http://data.rollvolet.be/vocabularies/pricing/",
    "prov": "http://www.w3.org/ns/prov#",
    "schema": "http://schema.org/",
    "skos": "http://www.w3.org/2004/02/skos/core#",
    "p2poPrice": "https://purl.org/p2p-o/document#"
  },
  "resources": {
    "cases": {
      "name": "case",
      "class": "dossier:Dossier",
      "attributes": {
        "identifier": {
          "type": "string",
          "predicate": "dct:identifier"
        },
        "reference": {
          "type": "string",
          "predicate": "frapo:hasReferenceNumber"
        },
        "comment": {
          "type": "string",
          "predicate": "skos:comment"
        },
        "has-production-ticket": {
          "type": "boolean",
          "predicate": "crm:hasProductionTicket",
          "_comment": "TODO Refactor to relation to a nfo:FileDataObject"
        },
        "certificate-required": {
          "type": "boolean",
          "predicate": "crm:requiresVatCertificate"
        },
        "certificate-received": {
          "type": "boolean",
          "predicate": "crm:hasVatCertificate",
          "_comment": "TODO Refactor to relation to a nfo:FileDataObject"
        },
        "customer": {
          "type": "url",
          "predicate": "schema:customer",
          "_comment": "TODO Refactor to relation once customer is defined as a resource"
        },
        "contact": {
          "type": "url",
          "predicate": "crm:contact",
          "_comment": "TODO Refactor to relation once contact is defined as a resource"
        },
        "building": {
          "type": "url",
          "predicate": "crm:building",
          "_comment": "TODO Refactor to relation once building is defined as a resource"
        },
        "request": {
          "type": "url",
          "predicate": "ext:request",
          "_comment": "TODO Refactor to relation once request is defined as a resource"
        },
        "intervention": {
          "type": "url",
          "predicate": "ext:intervention",
          "_comment": "TODO Refactor to relation once intervention is defined as a resource"
        },
        "offer": {
          "type": "url",
          "predicate": "ext:offer",
          "_comment": "TODO Refactor to relation once offer is defined as a resource"
        },
        "order": {
          "type": "url",
          "predicate": "ext:order",
          "_comment": "TODO Refactor to relation once order is defined as a resource"
        }
      },
      "relationships": {
        "vat-rate": {
          "predicate": "p2poPrice:hasVATCategoryCode",
          "target": "vat-rate",
          "cardinality": "one"
        },
        "attachments": {
          "predicate": "dossier:Dossier.bestaatUit",
          "target": "file",
          "cardinality": "many"
        },
        "invoices": {
          "predicate": "dossier:Dossier.bestaatUit",
          "target": "invoice",
          "cardinality": "many"
        }
      },
      "new-resource-base": "http://data.rollvolet.be/cases/",
      "features": ["include-uri"]
    },
    "offerlines": {
      "name": "offerline",
      "class": "crm:Offerline",
      "attributes": {
        "amount": {
          "type": "decimal",
          "predicate": "schema:amount"
        },
        "currency": {
          "type": "string",
          "predicate": "schema:currency"
        },
        "description": {
          "type": "string",
          "predicate": "dct:description"
        },
        "position": {
          "type": "integer",
          "predicate": "schema:position"
        },
        "offer": {
          "type": "url",
          "predicate": "dct:isPartOf",
          "_comment": "TODO Refactor to relation once offer is defined as a resource"
        }
      },
      "relationships": {
        "calculation-lines": {
          "predicate": "dct:isPartOf",
          "target": "calculation-line",
          "cardinality": "many",
          "inverse": true
        },
        "vat-rate": {
          "predicate": "price:hasVatRate",
          "target": "vat-rate",
          "cardinality": "one"
        }
      },
      "new-resource-base": "http://data.rollvolet.be/offerlines/",
      "features": ["include-uri"]
    },
    "calculation-lines": {
      "name": "calculation-line",
      "class": "crm:CalculationLine",
      "attributes": {
        "position": {
          "type": "integer",
          "predicate": "schema:position"
        },
        "amount": {
          "type": "decimal",
          "predicate": "schema:amount"
        },
        "reduction-rate": {
          "type": "decimal",
          "predicate": "price:hasReductionRate"
        },
        "currency": {
          "type": "string",
          "predicate": "schema:currency"
        },
        "description": {
          "type": "string",
          "predicate": "dct:description"
        }
      },
      "relationships": {
        "offerline": {
          "predicate": "dct:isPartOf",
          "target": "offerline",
          "cardinality": "one"
        }
      },
      "new-resource-base": "http://data.rollvolet.be/calculation-lines/",
      "features": ["include-uri"]
    }
  }
}
