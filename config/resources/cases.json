{
  "version": "0.1",
  "prefixes": {
    "dct": "http://purl.org/dc/terms/",
    "schema": "http://schema.org/",
    "dossier": "https://data.vlaanderen.be/ns/dossier#",
    "ext": "http://mu.semte.ch/vocabularies/ext/",
    "crm": "http://data.rollvolet.be/vocabularies/crm/",
    "price": "http://data.rollvolet.be/vocabularies/pricing/",
    "prov": "http://www.w3.org/ns/prov#"
  },
  "resources": {
    "cases": {
      "name": "case",
      "class": "dossier:Dossier",
      "attributes": {
        "identifier": {
          "type": "string",
          "predicate": "dct:identifier"
        }
      },
      "relationships": {
        "attachments": {
          "predicate": "dossier:Dossier.bestaatUit",
          "target": "file",
          "cardinality": "many"
        }
      },
      "new-resource-base": "http://data.rollvolet.be/cases/",
      "features": ["include-uri"]
    },
    "offerlines": {
      "name": "offerline",
      "class": "crm:Offerline",
      "attributes": {
        "amount": {
          "type": "decimal",
          "predicate": "schema:amount"
        },
        "currency": {
          "type": "string",
          "predicate": "schema:currency"
        },
        "description": {
          "type": "string",
          "predicate": "dct:description"
        },
        "position": {
          "type": "integer",
          "predicate": "schema:position"
        },
        "offer": {
          "type": "url",
          "predicate": "dct:isPartOf",
          "_comment": "TODO Refactor to relation once offer is defined as a resource"
        }
      },
      "relationships": {
        "calculation-lines": {
          "predicate": "dct:isPartOf",
          "target": "calculation-line",
          "cardinality": "many",
          "inverse": true
        },
        "vat-rate": {
          "predicate": "price:hasVatRate",
          "target": "vat-rate",
          "cardinality": "one"
        }
      },
      "new-resource-base": "http://data.rollvolet.be/offerlines/",
      "features": ["include-uri"]
    },
    "calculation-lines": {
      "name": "calculation-line",
      "class": "crm:CalculationLine",
      "attributes": {
        "position": {
          "type": "integer",
          "predicate": "schema:position"
        },
        "amount": {
          "type": "decimal",
          "predicate": "schema:amount"
        },
        "reduction-rate": {
          "type": "decimal",
          "predicate": "price:hasReductionRate"
        },
        "currency": {
          "type": "string",
          "predicate": "schema:currency"
        },
        "description": {
          "type": "string",
          "predicate": "dct:description"
        }
      },
      "relationships": {
        "offerline": {
          "predicate": "dct:isPartOf",
          "target": "offerline",
          "cardinality": "one"
        }
      },
      "new-resource-base": "http://data.rollvolet.be/calculation-lines/",
      "features": ["include-uri"]
    },
    "invoicelines": {
      "name": "invoiceline",
      "class": "crm:Invoiceline",
      "attributes": {
        "amount": {
          "type": "decimal",
          "predicate": "schema:amount"
        },
        "currency": {
          "type": "string",
          "predicate": "schema:currency"
        },
        "description": {
          "type": "string",
          "predicate": "dct:description"
        },
        "position": {
          "type": "integer",
          "predicate": "schema:position"
        },
        "type": {
          "type": "url",
          "predicate": "dct:type",
          "_comment": "Used to indicate invoicelines that originate from supplements in Access"
        },
        "order": {
          "type": "url",
          "predicate": "prov:wasDerivedFrom",
          "_comment": "TODO Refactor to relation once order is defined as a resource"
        },
        "invoice": {
          "type": "url",
          "predicate": "dct:isPartOf",
          "_comment": "TODO Refactor to relation once invoice is defined as a resource"
        }
      },
      "relationships": {
        "vat-rate": {
          "predicate": "price:hasVatRate",
          "target": "vat-rate",
          "cardinality": "one"
        }
      },
      "new-resource-base": "http://data.rollvolet.be/invoicelines/",
      "features": ["include-uri"]
    }
  }
}
