{
  "version": "0.1",
  "prefixes": {
    "dct": "http://purl.org/dc/terms/",
    "schema": "http://schema.org/",
    "nfo": "http://www.semanticdesktop.org/ontologies/2007/03/22/nfo#",
    "nie": "http://www.semanticdesktop.org/ontologies/2007/01/19/nie#",
    "dbpedia": "http://dbpedia.org/resource/",
    "dossier": "https://data.vlaanderen.be/ns/dossier#",
    "ext": "http://mu.semte.ch/vocabularies/ext/",
    "crm": "http://data.rollvolet.be/vocabularies/crm/",
    "price": "http://data.rollvolet.be/vocabularies/pricing/"
  },
  "resources": {
    "cases": {
      "name": "case",
      "class": "dossier:Dossier",
      "attributes": {
        "identifier": {
          "type": "string",
          "predicate": "dct:identifier"
        }
      },
      "relationships": {
        "attachments": {
          "predicate": "dossier:Dossier.bestaatUit",
          "target": "file",
          "cardinality": "many"
        }
      },
      "new-resource-base": "http://data.rollvolet.be/cases/",
      "features": ["include-uri"]
    },
    "vat-rates": {
      "name": "vat-rate",
      "class": "price:VatRate",
      "_comment": "Subclass of schema:QuantitativeValue",
      "attributes": {
        "name": {
          "type": "string",
          "predicate": "schema:name"
        },
        "code": {
          "type": "string",
          "predicate": "schema:identifier",
          "_comment": "Shorthand notation of the VAT rate"
        },
        "identifier": {
          "type": "string",
          "predicate": "dct:identifier",
          "_comment": "Legacy ID of the VAT rate in SQL DB"
        },
        "rate": {
          "type": "decimal",
          "predicate": "schema:value"
        },
        "order": {
          "type": "number",
          "predicate": "schema:position",
          "_comment": "TODO: rename to 'position' once VAT rate is removed from SQL DB"
        },
        "unit-code": {
          "type": "string",
          "predicate": "schema:unitCode",
          "_comment": "Will always be P1 = percentage"
        }
      },
      "relationships": {
        "offerlines": {
          "predicate": "price:hasVatRate",
          "target": "offerline",
          "cardinality": "many",
          "inverse": true
        }
      },
      "new-resource-base": "http://data.rollvolet.be/vat-rates/",
      "features": ["include-uri"]
    },
    "offerlines": {
      "name": "offerline",
      "class": "crm:Offerline",
      "attributes": {
        "amount": {
          "type": "decimal",
          "predicate": "schema:amount"
        },
        "currency": {
          "type": "string",
          "predicate": "schema:currency"
        },
        "description": {
          "type": "string",
          "predicate": "dct:description"
        },
        "sequence-number": {
          "type": "number",
          "predicate": "schema:position"
        },
        "offer": {
          "type": "url",
          "predicate": "dct:isPartOf",
          "_comment": "TODO Refactor to relation once offer is defined as a resource"
        }
      },
      "relationships": {
        "calculation-lines": {
          "predicate": "dct:isPartOf",
          "target": "calculation-line",
          "cardinality": "many",
          "inverse": true
        },
        "vat-rate": {
          "predicate": "price:hasVatRate",
          "target": "vat-rate",
          "cardinality": "one"
        }
      },
      "new-resource-base": "http://data.rollvolet.be/offerlines/",
      "features": ["include-uri"]
    },
    "calculation-lines": {
      "name": "calculation-line",
      "class": "crm:CalculationLine",
      "attributes": {
        "amount": {
          "type": "decimal",
          "predicate": "schema:amount"
        },
        "currency": {
          "type": "string",
          "predicate": "schema:currency"
        },
        "description": {
          "type": "string",
          "predicate": "dct:description"
        }
      },
      "relationships": {
        "offerline": {
          "predicate": "dct:isPartOf",
          "target": "offerline",
          "cardinality": "one"
        }
      },
      "new-resource-base": "http://data.rollvolet.be/calculation-lines/",
      "features": ["include-uri"]
    },
    "files": {
      "name": "file",
      "class": "nfo:FileDataObject",
      "attributes": {
        "filename": {
          "type": "string",
          "predicate": "nfo:fileName"
        },
        "format": {
          "type": "string",
          "predicate": "dct:format"
        },
        "size": {
          "type": "number",
          "predicate": "nfo:fileSize"
        },
        "extension": {
          "type": "string",
          "predicate": "dbpedia:fileExtension"
        },
        "created": {
          "type": "datetime",
          "predicate": "nfo:fileCreated"
        }
      },
      "relationships": {
        "download": {
          "predicate": "nie:dataSource",
          "target": "remote-file",
          "cardinality": "one",
          "inverse": true
        },
        "case": {
          "predicate": "dossier:Dossier.bestaatUit",
          "target": "case",
          "cardinality": "one",
          "inverse": true
        }
      },
      "new-resource-base": "http://data.rollvolet.be/files/",
      "features": ["include-uri"]
    },
    "remote-files": {
      "name": "remote-file",
      "class": "nfo:RemoteDataObject",
      "_comment": "Subclass of nfo:FileDataObject",
      "attributes": {
        "filename": {
          "type": "string",
          "predicate": "nfo:fileName"
        },
        "format": {
          "type": "string",
          "predicate": "dct:format"
        },
        "size": {
          "type": "number",
          "predicate": "nfo:fileSize"
        },
        "extension": {
          "type": "string",
          "predicate": "dbpedia:fileExtension"
        },
        "created": {
          "type": "datetime",
          "predicate": "nfo:fileCreated"
        },
        "ms-identifier": {
          "type": "string",
          "predicate": "dct:identifier"
        },
        "url": {
          "type": "url",
          "predicate": "nfo:fileUrl"
        }
      },
      "relationships": {
        "data-source": {
          "predicate": "nie:dataSource",
          "target": "file",
          "cardinality": "one"
        }
      },
      "new-resource-base": "http://data.rollvolet.be/files/",
      "features": ["include-uri"]
    }
  }
}
