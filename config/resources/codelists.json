{
  "version": "0.1",
  "prefixes": {
    "crm": "http://data.rollvolet.be/vocabularies/crm/",
    "dct": "http://purl.org/dc/terms/",
    "price": "http://data.rollvolet.be/vocabularies/pricing/",
    "schema": "http://schema.org/"
  },
  "resources": {
    "vat-rates": {
      "name": "vat-rate",
      "class": "price:VatRate",
      "_comment": "Subclass of schema:QuantitativeValue",
      "attributes": {
        "name": {
          "type": "string",
          "predicate": "schema:name"
        },
        "code": {
          "type": "string",
          "predicate": "schema:identifier",
          "_comment": "Shorthand notation of the VAT rate"
        },
        "identifier": {
          "type": "string",
          "predicate": "dct:identifier",
          "_comment": "Legacy ID in SQL DB"
        },
        "rate": {
          "type": "decimal",
          "predicate": "schema:value"
        },
        "order": {
          "type": "number",
          "predicate": "schema:position",
          "_comment": "TODO: rename to 'position' once VAT rate is removed from SQL DB"
        },
        "unit-code": {
          "type": "string",
          "predicate": "schema:unitCode",
          "_comment": "Will always be P1 = percentage"
        }
      },
      "relationships": {
        "offerlines": {
          "predicate": "price:hasVatRate",
          "target": "offerline",
          "cardinality": "many",
          "inverse": true
        }
      },
      "new-resource-base": "http://data.rollvolet.be/vat-rates/",
      "features": ["include-uri"]
    },
    "honorific-prefixes": {
      "name": "honorific-prefix",
      "class": "crm:HonorificPrefix",
      "attributes": {
        "label": {
          "type": "language-string",
          "predicate": "skos:label"
        },
        "identifier": {
          "type": "string",
          "predicate": "dct:identifier",
          "_comment": "Legacy ID in SQL DB"
        }
      },
      "relationships": {
        "customer": {
          "predicate": "vcard:hasHonorificPrefix",
          "target": "customer",
          "cardinality": "one",
          "inverse": true
        },
        "contact": {
          "predicate": "vcard:hasHonorificPrefix",
          "target": "contact",
          "cardinality": "one",
          "inverse": true
        },
        "building": {
          "predicate": "vcard:hasHonorificPrefix",
          "target": "building",
          "cardinality": "one",
          "inverse": true
        }
      },
      "features": [
        "include-uri"
      ],
      "new-resource-base": "http://data.rollvolet.be/honorific-prefixes/"
    },
    "postal-codes": {
      "name": "postal-code",
      "class": "crm:PostalCode",
      "attributes": {
        "name": {
          "type": "string",
          "predicate": "schema:name"
        },
        "code": {
          "type": "string",
          "predicate": "schema:identifier"
        },
        "identifier": {
          "type": "string",
          "predicate": "dct:identifier",
          "_comment": "Legacy ID in SQL DB"
        }
      },
      "relationships": {
        "address": {
          "predicate": "vcard:hasPostalCode",
          "target": "address",
          "cardinality": "many",
          "inverse": true
        }
      },
      "features": [
        "include-uri"
      ],
      "new-resource-base": "http://data.rollvolet.be/postal-codes/"
    },
    "countries": {
      "name": "country",
      "class": "schema:Country",
      "attributes": {
        "name": {
          "type": "string",
          "predicate": "schema:name"
        },
        "code": {
          "type": "string",
          "predicate": "schema:identifier"
        },
        "telephone-prefix": {
          "type": "string",
          "predicate": "crm:telephonePrefix"
        },
        "identifier": {
          "type": "string",
          "predicate": "dct:identifier",
          "_comment": "Legacy ID in SQL DB"
        }
      },
      "relationships": {
        "address": {
          "predicate": "vcard:hasCountryName",
          "target": "address",
          "cardinality": "many",
          "inverse": true
        },
        "telephones": {
          "predicate": "vcard:hasCountryName",
          "target": "telephone",
          "cardinality": "many",
          "inverse": true
        }
      },
      "features": [
        "include-uri"
      ],
      "new-resource-base": "http://data.rollvolet.be/country/"
    },
    "languages": {
      "name": "language",
      "class": "schema:Language",
      "attributes": {
        "name": {
          "type": "string",
          "predicate": "schema:name"
        },
        "code": {
          "type": "string",
          "predicate": "schema:identifier"
        },
        "identifier": {
          "type": "string",
          "predicate": "dct:identifier",
          "_comment": "Legacy ID in SQL DB"
        }
      },
      "relationships": {
        "customer": {
          "predicate": "vcard:hasLanguage",
          "target": "customer",
          "cardinality": "one",
          "inverse": true
        },
        "contact": {
          "predicate": "vcard:hasLanguage",
          "target": "contact",
          "cardinality": "one",
          "inverse": true
        },
        "building": {
          "predicate": "vcard:hasLanguage",
          "target": "building",
          "cardinality": "one",
          "inverse": true
        }
      },
      "features": [
        "include-uri"
      ],
      "new-resource-base": "http://data.rollvolet.be/language/"
    }
  }
}
